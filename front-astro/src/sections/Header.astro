

<header class="header-container">
    <h1>M.IA</h1>
    <a  href='#footer'   
          type="submit"
          class=" btn-enviar2 w-56 h-12 mr-10 text-white font-bold py-2 px-4 rounded-md  focus:outline-none focus:ring-2  "
        >
        ¡Entérate primero!
        </a>
</header>



<style>
     header{
        width:100vw;
        background-color:#204d74;
        height:60px;
        display:flex;
        justify-content:space-between;
        align-items:center
    }
    h1{
        margin-left:10%;
        font-weight:bold;
        font-size:26px;
    }
    .btn-enviar2{
      background-color:#FFFFFF;
      color:#4A4A4A
    }
    .btn-enviar2:hover{
      background-color:#F5F5F5;
    }
</style>

<script>
  document.querySelector('.btn-enviar2').addEventListener('click', (event) => {
    event.preventDefault();
    const targetId = event.target.getAttribute('href');
    const targetElement = document.querySelector(targetId);
    targetElement.scrollIntoView({ behavior: 'smooth' });
  });
</script>
